<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity"
    android:background="@color/black"
    android:fillViewport="true">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:alignmentMode="alignMargins"
        android:background="@color/black"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:rowCount="1">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="30dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImageProfile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/grey"
                    android:src="@drawable/datagathering"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:text="Edit your Profile"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    />



                <EditText
                    android:id="@+id/ETEditFirstName"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/TVEditProfileFName"
                    android:layout_marginTop="25dp"
                    android:hint="First Name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/whitesmoke"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/ETEditSurname"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ETDataFirstName"
                    android:layout_marginTop="15dp"
                    android:hint="Surname"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/whitesmoke"
                    android:textAlignment="center"
                    />

                <EditText
                    android:id="@+id/ETEditCalorieGoal"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ETDataSurname"
                    android:layout_marginTop="20dp"
                    android:hint="Calorie Goal"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/whitesmoke"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Measurement System:"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp">

                </TextView>

                <Spinner
                    android:id="@+id/SpinEditMeasurement"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ETDataCalorieGoal"
                    android:background="@color/whitesmoke"
                    android:textAlignment="center"
                    />

                <EditText
                    android:id="@+id/ETEditCurrentWeight"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:hint="Current Weight"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/whitesmoke"
                    android:textAlignment="center"
                    />

                <EditText
                    android:id="@+id/ETEditGoalWeight"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:hint="Goal Weight"
                    android:layout_below="@+id/ETDataCurrentWeight"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/whitesmoke"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/ETEditHeight"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:hint="Height"
                    android:layout_below="@+id/ETDataGoalWeight"
                    android:inputType="number" android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/whitesmoke"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/ETEditGoalHeight"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:hint="Goal Height"
                    android:layout_below="@+id/ETDataGoalWeight"
                    android:inputType="number" android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/whitesmoke"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sex:"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp">

                </TextView>

                <Spinner
                    android:id="@+id/SpinEditSex"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ETDataGoalHeight"
                    android:background="@color/whitesmoke"
                    android:textAlignment="center"
                    />




                <Button
                    android:id="@+id/BtnEditProfile"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:layout_below="@id/SpinSex"
                    android:text="Save Edit"
                    android:layout_marginBottom="30dp"
                    android:background="@color/black"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</ScrollView>